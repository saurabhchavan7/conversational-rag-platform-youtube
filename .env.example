# ========================================
# Conversational RAG Platform - Environment Variables
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.2

# Vector Store Configuration
VECTOR_STORE_TYPE=faiss  # Options: faiss, pinecone
PINECONE_API_KEY=your_pinecone_api_key_here  # Only if using Pinecone
PINECONE_ENVIRONMENT=us-west1-gcp  # Only if using Pinecone
PINECONE_INDEX_NAME=youtube-rag-index  # Only if using Pinecone

# Retrieval Configuration
RETRIEVAL_TOP_K=4
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://*

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# LangSmith Configuration (Optional - for evaluation)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=conversational-rag-youtube

# RAGAS Evaluation (Optional)
ENABLE_EVALUATION=false